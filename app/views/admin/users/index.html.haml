%h1.title Users

%table.table.table-striped.users
  %tr
    %th ID
    %th Username
    %th Name
    %th Primary Role
    %th Email
    %th
  - for user in @users
    %tr{id: "user-#{user.id}"}
      %td= user.id
      %td= user.username
      %td= user.name
      %td= user.primary_role
      %td= user.email
      %td
        .btn-group
          =link_to raw("Manage User <span class='caret'></span>"), "#", class: "btn btn-sm btn-default dropdown-toggle", "data-toggle" => "dropdown"
          %ul.dropdown-menu
            %li= link_to "Edit User", edit_admin_user_path(user.id)
            %li= link_to "Delete User", admin_user_path(user.id), method: :delete, "data-confirm" => "Are you sure you want to delete this user? This action cannot be undone."