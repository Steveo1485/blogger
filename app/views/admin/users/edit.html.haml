.container-fluid
  %h2.title== Edit User ##{@user.id}

  = form_for [:admin, @user], html: {class: "form-horizontal"} do |f|
    = render 'layouts/errors', object: @user

    .form-group
      = f.label :first_name, class: "col-sm-4 control-label"
      .col-sm-offset4.col-sm-4
        = f.text_field :first_name, placeholder: "First name", class: "form-control"

    .form-group
      = f.label :last_name, class: "col-sm-4 control-label"
      .col-sm-offset4.col-sm-4
        = f.text_field :last_name, placeholder: "Last name", class: "form-control"

    .form-group
      = f.label :username, class: "col-sm-4 control-label"
      .col-sm-offset4.col-sm-4
        = f.text_field :username, placeholder: "Username", class: "form-control"

    .form-group
      = f.label :email, class: "col-sm-4 control-label"
      .col-sm-offset4.col-sm-4
        = f.email_field :email, placeholder: "Email", class: "form-control"

    .form-group
      .col-sm-offset-4.col-sm-8
        = link_to "Cancel", admin_users_path, class: "btn btn-danger"
        = f.submit "Update User", class: "btn btn-default"