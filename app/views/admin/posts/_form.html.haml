= form_for [:admin, @post], html: {class: "form-horizontal"} do |f|
  = render 'layouts/errors', object: @post

  .form-group.required-field
    = f.label :title, "Post Title", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :title, placeholder: "Post Title...", class: "form-control"

  .form-group.required-field
    = f.label :content, "Post Content", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :content, placeholder: "Post Content...", rows: "10", class: "form-control"

  .form-group
    = f.label :active, "Post Active?", class: "col-sm-2 control-label"
    .col-sm-10
      = f.check_box :active
      - if @post.active
        == Posted on: #{@post.activated_at.strftime("%B %e, %Y")}

  .form-group
    .col-sm-10.col-sm-offset-2
      = link_to "Cancel", path, class: "btn btn-danger"
      = f.submit "#{@post.new_record? ? 'Save Post' : 'Update Post'}", class: "btn btn-default", id: "new-post-btn"

%h5.required-fields * Indicates required field